<div class="row">
<div class="col-md-12">
<br>
<h2>Courses</h2>
<hr />

 {{#if courses}}
      <div class="table-responsive">
        <table class="table">
          <thead>
            <tr>
              <th>Course Code</th>
              <th>Course Description</th>
            </tr>
          </thead>
          <tbody>
            {{#each courses}}
              <tr>
                <td><a href="/course/{{this.courseId}}">{{this.courseCode}}</a></td>
                <td><a href="/students?course={{this.courseId}}">{{this.courseDescription}}</a></td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    {{else}}
      <div class="col-md-12 text-center">
        <strong>{{message}}</strong>
      </div>
    {{/if}}
    <div class="row">
  <div class="col-md-12">
    <br>
    <h2>Error</h2>
    <hr />
    <p>{{error}}</p>
  </div>
</div>

</div>
</div>
